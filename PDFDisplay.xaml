<UserControl x:Class="kiosk_snapprint.PDFDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syncfusion="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kiosk_snapprint"
             mc:Ignorable="d" 
            d:DesignHeight="1080" d:DesignWidth="1900">

    <Grid Background="White">
        <Border Margin="75,40,85,75" BorderBrush="Black" BorderThickness="5,5,5,5" CornerRadius="5,5,5,5" >
            <syncfusion:PdfViewerControl x:Name="pdfViewer" Margin="40,35,870,40" />

        </Border>

    </Grid>
</UserControl>
